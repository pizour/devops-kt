# PostgreSQL Client Authentication - Generated by Ansible

# TYPE  DATABASE        USER            ADDRESS                 METHOD

# Local connections
local   all             postgres                                peer
local   all             all                                     md5

# IPv4 connections
host    all             all             127.0.0.1/32            md5

# Allow connections from the subnet
host    all             all             {{ ansible_host | regex_replace('\.\d+$', '.0/24') }}  md5

{% if database_role == 'primary' %}
# Replication connections
host    replication     all             {{ ansible_host | regex_replace('\.\d+$', '.0/24') }}  md5
{% endif %}
