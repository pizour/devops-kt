# Fossology Configuration File
# Generated by Ansible for {{ hostname }}
# Environment: {{ environment }}

[database]
host = {{ db_host }}
port = {{ db_port }}
dbname = {{ db_name }}
user = {{ db_user }}

[paths]
install = {{ fossology_install_dir }}
data = {{ fossology_data_dir }}
repository = {{ fossology_repo_dir }}

[application]
debug = {{ fossology_debug_mode | default(false) | lower }}
workers = {{ fossology_scheduler_workers | default(4) }}
max_upload_size = {{ fossology_max_upload_size | default('500M') }}

[web]
server = {{ web_server }}
port = {{ web_server_port }}
ssl_enabled = {{ ssl_enabled | default(false) | lower }}
